{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs",      
    "outDir": "./dist",
    "rootDir": "./src",                          
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,    
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
